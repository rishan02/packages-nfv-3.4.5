<config-template xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs">
    <device tags="nocreate">
      <name>{/esc-device/name}</name>
      <config tags="merge">
        <esc_datamodel xmlns="http://www.cisco.com/esc/esc">
          <flavors>
            <flavor>
              <name>{/name}</name>
              <vcpus>{$VCPU}</vcpus>
              <memory_mb>{$MEM}</memory_mb>
              <root_disk_mb>{$ROOTDISK}</root_disk_mb>
              <ephemeral_disk_mb when="{$EPHEMERALDISK>0}">{$EPHEMERALDISK}</ephemeral_disk_mb>
              <swap_disk_mb when="{$SWAPDISK>0}">{$SWAPDISK}</swap_disk_mb>
              <description>Flavor generated by NSO from VNFD '{vnfd}' and VDU '{vdu}'</description>
              <properties>
                  <property>
                      <name>{/properties/property/name}</name>
                      <value>{value}</value>
                  </property>
              </properties>
            </flavor>
          </flavors>
        </esc_datamodel>
      </config>
    </device>
  </devices>
</config-template>
