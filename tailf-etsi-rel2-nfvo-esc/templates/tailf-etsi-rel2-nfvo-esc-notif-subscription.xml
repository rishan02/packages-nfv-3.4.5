<config xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs">
    <device>
      <name>{/netconf-subscription/esc-device/name}</name>
      <netconf-notifications>
        <subscription>
          <name>tailf_nfvo</name>
          <stream>escEvent</stream>
          <local-user>{/netconf-subscription/username}</local-user>
          <reconnect-interval>{/netconf-subscription/reconnect-interval}</reconnect-interval>
        </subscription>
      </netconf-notifications>
    </device>
  </devices>
</config>
